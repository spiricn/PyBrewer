<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.SystemFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/systemButtonStop"/>
        <Button
                android:text="Restart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/systemButtonRestart"/>
        <Button
                android:text="Backup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/systemButtonBackup"/>
    </LinearLayout>
</FrameLayout>